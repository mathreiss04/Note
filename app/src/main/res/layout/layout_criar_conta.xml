<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CriarConta"
    android:orientation="vertical"
    android:background="@color/app_background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:textColor="@color/text_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="28dp"
        android:text="Cadastre o Login e a Senha"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />


    <EditText
        android:id="@+id/novoLogin"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/userNameHint"
        android:maxLength="8"/>

    <EditText
        android:id="@+id/novaSenha"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/digiteSenha"
        android:inputType="textPassword"
        android:maxLength="8"/>

    <EditText
        android:id="@+id/confirmaSenha"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/confirmaSenha"
        android:inputType="textPassword"
        android:maxLength="8"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        />

    <Button
        android:id="@+id/btnCriar_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/criar_conta"
        android:layout_weight="0.3"
        android:background="@drawable/selector_button2"
        />
</LinearLayout>
